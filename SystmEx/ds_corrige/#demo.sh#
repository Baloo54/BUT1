#!/bin/bash
if [ $# -lt 3 ]; then
    echo au min 3 arguments
    exit 3
elif [ $1 != 'somme' -o $1 != 'produit' ]; then
    echo premier arg doit Ãªtre somme ou produit
    exit 2
elif [ $1 == 'somme' ]; then
    resultat=0
    shift
    for i in $*;do
	resultat=$((resultat+$i))
    done
else
    shift
    resultat=1
    for i in $*;do
	resultat=$((resultat*$i))
    done
fi    
    
